{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2018",
    "rootDir": "src",
    "outDir": "dist",
    "module": "CommonJS",
    "lib": ["esnext"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "global-type.d.ts"]
}
